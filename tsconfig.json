{
    "compilerOptions": {
      "baseUrl"                          : "./",
      "target"                           : "es2016",
      "outDir"                           : "dist",
      "module"                           : "commonjs",
      "esModuleInterop"                  : true,
      "experimentalDecorators"           : true,
      "emitDecoratorMetadata"            : true,
      "forceConsistentCasingInFileNames" : true,
      "strict"                           : true,
      "skipLibCheck"                     : true,
      "paths"                            : { "api/*"   : ["api/*"] }
    },
    "include" : ["./"]
  }
  